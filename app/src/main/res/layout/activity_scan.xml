<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="7"
              >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2">
        <Button
            android:id="@+id/toogle_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/live" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CineBuffer#:" />

            <TextView
                android:id="@+id/cine_buffer_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/bMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="B" />

                <Button
                    android:id="@+id/cMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CF" />
                <Button
                    android:id="@+id/fit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fit_width" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gain" />
                <SeekBar
                    android:id="@+id/seekBarGain"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="50" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dynamic Range" />

                <SeekBar
                    android:id="@+id/seekBarDr"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:max="100"
                    android:progress="50" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TGC1" />

                <SeekBar
                    android:id="@+id/seekBarTgc1"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="50" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TGC2" />

                <SeekBar
                    android:id="@+id/seekBarTgc2"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="50" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TGC3" />

                <SeekBar
                    android:id="@+id/seekBarTgc3"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="50" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TGC4" />

                <SeekBar
                    android:id="@+id/seekBarTgc4"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:max="100"
                    android:progress="50" />
                <Button
                    android:id="@+id/resetAllTgc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="reset Tgc" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Persistence" />

                <SeekBar
                    android:id="@+id/seekBarPersistence"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="4"
                    android:progress="0" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enhancement" />

                <SeekBar
                    android:id="@+id/seekBarEnhancement"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:max="4"
                    android:progress="0" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Depth" />

                <SeekBar
                    android:id="@+id/seekBarDepth"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:max="3"
                    android:progress="0" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ColorGain" />

                <SeekBar
                    android:id="@+id/seekBarColorGain"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:max="100"
                    android:progress="0" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ColorPersistence" />

                <SeekBar
                    android:id="@+id/seekBarColorPersistence"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:max="4"
                    android:progress="0" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ColorPrf" />

                <SeekBar
                    android:id="@+id/seekBarColorPrf"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:max="2"
                    android:progress="0" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ColorThreshold" />

                <SeekBar
                    android:id="@+id/seekBarColorThreshold"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:max="7"
                    android:progress="0" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EnumColorWall" />

                <SeekBar
                    android:id="@+id/seekBarEnumColorWall"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:max="6"
                    android:progress="0" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ColorAngle" />

                <SeekBar
                    android:id="@+id/seekBarColorAngle"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:max="6"
                    android:progress="0" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gray Map" />
                <NumberPicker
                    android:id="@+id/np"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:descendantFocusability="blocksDescendants"/>
                <Button
                    android:id="@+id/test_conn_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Test Conn Error" />

                <Button
                    android:id="@+id/test_over_heated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Test Over Heated" />

                <Button
                    android:id="@+id/test_battery_low"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Test Battery Low" />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:layout_weight="4">
        <cndoppler.cn.wifiprobe.widgets.UsImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="matrix"
            />

    </RelativeLayout>
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#000000"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/wedth_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="温度"
                android:layout_margin="5dp"
                android:textColor="#00ff00"/>
            <TextView
                android:id="@+id/power_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电量"
                android:layout_margin="5dp"
                android:layout_below="@+id/wedth_tv"
                android:textColor="#00ff00"/>
            <TextView
                android:id="@+id/depth_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="深度"
                android:layout_margin="5dp"
                android:textColor="#00ff00"/>
            <TextView
                android:id="@+id/gain_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="增益"
                android:layout_margin="5dp"
                android:textColor="#00ff00"/>
            <TextView
                android:id="@+id/dr_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="动态范围"
                android:layout_margin="5dp"
                android:textColor="#00ff00"/>
            <TextView
                android:id="@+id/graymap_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="灰度图"
                android:layout_margin="5dp"
                android:textColor="#00ff00"/>
            <TextView
                android:id="@+id/persistence_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="帧相关"
                android:layout_margin="5dp"
                android:textColor="#00ff00"/>
            <TextView
                android:id="@+id/enhancelevel_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="增强等级"
                android:layout_margin="5dp"
                android:textColor="#00ff00"/>
            <TextView
                android:id="@+id/tg1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tg1"
                android:layout_margin="5dp"
                android:textColor="#00ff00"/>
            <TextView
                android:id="@+id/tg2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tg2"
                android:layout_margin="5dp"
                android:textColor="#00ff00"/>
            <TextView
                android:id="@+id/tg3_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tg3"
                android:layout_margin="5dp"
                android:textColor="#00ff00"/>
            <TextView
                android:id="@+id/tg4_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tg4"
                android:layout_margin="5dp"
                android:textColor="#00ff00"/>
            <TextView
                android:id="@+id/colorgain_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="彩色增益"
                android:layout_margin="5dp"
                android:textColor="#00ff00"/>
            <TextView
                android:id="@+id/colorPersistence_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="彩色帧相关"
                android:layout_margin="5dp"
                android:textColor="#00ff00"/>
            <TextView
                android:id="@+id/colorprf_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="prf"
                android:layout_margin="5dp"
                android:textColor="#00ff00"/>
            <TextView
                android:id="@+id/colorThresHold_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="colorthreshold"
                android:layout_margin="5dp"
                android:textColor="#00ff00"/>
            <TextView
                android:id="@+id/enumcolorWALL_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="壁滤波"
                android:layout_margin="5dp"
                android:textColor="#00ff00"/>
            <TextView
                android:id="@+id/colorangle_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="colorangle"
                android:layout_margin="5dp"
                android:textColor="#00ff00"/>
            <TextView
                android:id="@+id/frameRate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="帧频率"
                android:layout_margin="5dp"
                android:textColor="#00ff00"/>
            <TextView
                android:id="@+id/freq_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="频率"
                android:layout_margin="5dp"
                android:textColor="#00ff00"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
